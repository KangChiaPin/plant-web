///////////////////////////////////////////////////
// global variable

$height = 720px
$width = 480px

///////////////////////////////////////////////////
// global

.container
  display relative
  background-color #cccccc
  width 100%
  height 100%
  max-width $width
  max-height $height
.page
  height 90%
  position relative
  display none

///////////////////////////////////////////////////
// global

.nav
  height 10%
  width 100%
  max-width $width
  background-color #aaaaaa
  z-index 100
  display flex
  align-items center
  justify-content flex-end
.active
  display block
.menu
  display none
  background-color rgba(1, 1, 1, 0.6)
  margin 0 auto
  position fixed
  z-index 999
  a
    display table
.nav i.align
  cursor pointer
  margin-right 20px

///////////////////////////////////////////////////
// page-01

#page-01
  .circle
    position absolute
  .big
    bottom 0%
    left 40%
    background-color black
    width 70px
    height 70px
  .small
    bottom 3%
    left 45%
    background-color red
    width 40px
    height 40px
    animation orbit 4s linear infinite
    cursor pointer
  .small:hover
    width 60px
    height 60px
    animation-play-state paused
  @keyframes orbit
    from { transform: rotate(0deg) translateX(100px) rotate(0deg) }
    to   { transform: rotate(360deg) translateX(100px) rotate(-360deg) }
  .detail
    position relative
    margin 0 auto
    width 70%
    display none
    top 9vh
    background-color #117495
    .title
      height 10vh
      background-color #222
    .content
      height 20vh
      background-color #666
  .detail.open
    display block

///////////////////////////////////////////////////
// page-01-1

#page-01-1
  .title
    background-color #ddd
    margin 2% auto
    width 90%
    height 15%
  .list
    background-color #ddd
    margin 2% auto
    width 90%
    min-height 79%
    overflow-y scroll

