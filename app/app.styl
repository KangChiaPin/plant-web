///////////////////////////////////////////////////
// global variable

$height = 720px
$width = 480px

///////////////////////////////////////////////////
// global

.container
  display relative
  background-color #cccccc
  width 100%
  height 100%
  max-width $width
  max-height $height
.nav
  height 10%
  position absolute
  width 100%
  max-width $width
  background-color #aaaaaa
  z-index 100
.page
  height 100%
  position relative
  display none
.active
  display block
#menu-icon
  margin-left 100px
.menu
  display none
  background-color rgba(1, 1, 1, 0.6)
  margin 0 auto
  position fixed
  z-index 999
  a
    display table

///////////////////////////////////////////////////
// page-01

.circle
  position absolute
.big
  bottom 0%
  left 40%
  background-color black
  width 70px
  height 70px
.small
  bottom 3%
  left 45%
  background-color red
  width 40px
  height 40px
  animation orbit 4s linear infinite
.small:hover
  width 60px
  height 60px
  animation-play-state paused
@keyframes orbit
  from { transform: rotate(0deg) translateX(100px) rotate(0deg) }
  to   { transform: rotate(360deg) translateX(100px) rotate(-360deg) }

