///////////////////////////////////////////////////
// global variable

$height = 720px
$width = 480px

///////////////////////////////////////////////////
// global

a, a:link, a:hover, a:visited, a:active
  color black
.container
  display relative
  background-color #cccccc
  width 100%
  height 100%
.page
  height 90%
  position relative
  overflow scroll
  display none
  padding-bottom 2%

///////////////////////////////////////////////////
// global - navigator

#nav
  height 10%
  width 100%
  background-color #aaaaaa
  z-index 100
  display flex
  align-items center
  justify-content center
.active
  display block
#menu
  display none
  background-color rgba(1, 1, 1, 0.6)
  margin 0 auto
  position fixed
  z-index 999
  a
    display table
.nav i.align
  cursor pointer
  margin-right 20px

///////////////////////////////////////////////////
// page-01a

#page-01a
  .circle
    position absolute
  .big
    bottom 0%
    left 40%
    background-color black
    width 70px
    height 70px
  .small
    bottom 3%
    left 45%
    background-color red
    width 40px
    height 40px
    animation orbit 4s linear infinite
    cursor pointer
  .small:hover
    width 60px
    height 60px
    animation-play-state paused
  @keyframes orbit
    from { transform: rotate(0deg) translateX(100px) rotate(0deg) }
    to   { transform: rotate(360deg) translateX(100px) rotate(-360deg) }
  .detail
    position relative
    margin 0 auto
    width 70%
    display none
    top 9vh
    background-color #117495
    .title
      height 10vh
      background-color #222
    .content
      height 20vh
      background-color #666
  .detail.open
    display block

///////////////////////////////////////////////////
// page-01b

#page-01b
  .title
    position relative
    background-color #ddd
    margin 4% auto
    width 90%
    height 20vw
    display flex
    align-items center
    justify-content center
    font-size 10vw
  .list
    position relative
    margin 0 auto
    width 90%
    min-height 79%
    display flex
  .list .col.left
    height auto
    flex 1
  .list .col.right
    height auto
    flex 1
  .list .col.right .item
    float right
  .list .col.left .item
    float left
  .list .col .item
    position relative
    margin-top 4%
    background-color #ddd
    min-height 20vh
    height auto
    padding-bottom 4%
    width 98%
    a
      position absolute
      width 100%
      height 100%
    .cat
      font-size 3vw
      display flex
      align-items center
      justify-content center
      margin-left 4%
      margin-top 4%
      border-radius 4vw
      width 20%
      height 6vw
      background-color #666
    .image
      margin 4% auto
      width 90%
      height 20vw
      background-color #666
    .item-title
      word-break break-all
      margin 0 auto
      width 90%
      padding 2%
      display flex
      align-items center
      justify-content center
      font-size 3vw

///////////////////////////////////////////////////
// page-01c

#page-01c
  .info-block
    margin 0 auto
    background-color #ddd
    width 90%
    height auto
    min-height 100%
  .info-block .cat
    display flex
    align-items center
    justify-content center
    color white
    background-color #444
    width 100%
    height 8vw
    min-height 50px
    font-size 3vw
  .info-block .title
    display flex
    align-items center
    justify-content center
    height 15vw
    min-height 90px
    font-size 5vw
  .info-block .date
    margin 0 auto
    width 90%
    padding-bottom 2vw
    text-align right
    font-size 2vw
  .info-block .image
    width 90%
    background-color #666
    min-height 30vh
    margin 0 auto
  .info-block .content
    margin 0 auto
    width 90%
    height auto
    padding-top 20px
    padding-bottom 20px
    word-break break-all
    font-size 1.4rem

///////////////////////////////////////////////////
// page-02
#page-02
  .circle
    margin 0 auto
    margin-top 8vh
    width 25vh
    height 25vh
    border-radius 12.5vh
    font-size 5vh
    background-color #ddd
    opacity .8
    display flex
    align-items center
    justify-content center
  .sw-icon
    margin 0 auto
    margin-top 5vh
    width 100%
    height 20vh
    display flex
    align-items center
    justify-content center
    .facebook
      width 10vh
      height 10vh
      cursor pointer
      background-image url('res/fb.png')
      background-repeat no-repeat
      background-size contain
    .twitter
      width 10vh
      height 10vh
      margin-left 5vw
      cursor pointer
      background-image url('res/twitter.png')
      background-repeat no-repeat
      background-size contain
  .sign-up
    margin-top 5vh
    width 100%
    text-align center
    font-size 5vh
    color #666

